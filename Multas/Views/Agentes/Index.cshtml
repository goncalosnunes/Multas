@model IEnumerable<Multas.Models.Agentes>

@{
    ViewBag.Title = "Agentes";
}

<h2>Listagem de Agentes</h2>

<p>
    @Html.ActionLink("Criar novo agente", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Esquadra)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fotografia)
        </th>
        <th></th>
    </tr>

@foreach (var agentes in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => agentes.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => agentes.Esquadra)
        </td>
        <td>
            @Html.DisplayFor(modelItem => agentes.Fotografia)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=agentes.ID }) |
            @Html.ActionLink("Detalhes", "Details", new { id=agentes.ID }) |
            @Html.ActionLink("Apagar", "Delete", new { id=agentes.ID })
        </td>
    </tr>
}

</table>
